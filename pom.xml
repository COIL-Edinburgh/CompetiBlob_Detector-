	<developers>
		<!-- See https://imagej.net/Team -->
		<developer>
			<id>CoilEdinburgh</id>
			<name>David Kelly</name>
			<url>https://www.ed.ac.uk/biology/wcb/centre-optical-instrumentation-laboratory-coil</url>
			<roles>
				<role>founder</role>
				<role>lead</role>
