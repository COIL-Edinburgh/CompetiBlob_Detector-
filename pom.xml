				<role>debugger</role>
				<role>reviewer</role>
				<role>support</role>
				<role>maintainer</role>
			</roles>
		</developer>
	</developers>
	<contributors>
		<contributor>
			<name>Toni McHugh</name>
		</contributor>
	</contributors>

	<mailingLists>
		<mailingList>
			<name>Image.sc Forum</name>
			<archive>https://forum.image.sc/tag/imagej</archive>
		</mailingList>
	</mailingLists>

	<scm>
		<connection>scm:git:https://github.com/CoilEdinburgh/Fungal_Track</connection>
		<developerConnection>scm:git:git@github.com:CoilEdinburgh/Fungal_Track</developerConnection>
		<tag>HEAD</tag>
		<url>https://github.com/CoilEdinburgh/Fungal_Track</url>
	</scm>
	<issueManagement>
		<system>GitHub Issues</system>
		<url>https://github.com/CoilEdinburgh/Fungal_Track/issues</url>
	</issueManagement>
	<ciManagement>
		<system>None</system>
	</ciManagement>

	<properties>
		<package-name>bio.coil.CoilEdinburgh.Fungal_Track</package-name>
		<main-class>Fungal_Track</main-class>
		<license.licenseName>cc0</license.licenseName>
		<license.copyrightOwners>University of Edinburgh</license.copyrightOwners>
	</properties>

	<repositories>
		<repository>
			<id>scijava.public</id>
			<url>https://maven.scijava.org/content/groups/public</url>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>net.imagej</groupId>
			<artifactId>imagej</artifactId>
			<version>2.1.0</version>
		</dependency>
		<!-- User-facing commands -->
		<dependency>
			<groupId>net.imagej</groupId>
			<artifactId>imagej-plugins-commands</artifactId>
		</dependency>
		<!-- Run graphically with the classic ImageJ user interface -->
		<dependency>
			<groupId>net.imagej</groupId>
			<artifactId>imagej-legacy</artifactId>
			
		</dependency>
		<!-- Include all Fiji plugins when running -->
		<dependency>
			<groupId>sc.fiji</groupId>
			<artifactId>fiji</artifactId>
			
		</dependency>
		
		<!-- https://mvnrepository.com/artifact/ome/bioformats_package -->
		<dependency>
    		<groupId>ome</groupId>
    		<artifactId>bioformats_package</artifactId>
    	  	<version>7.0.0</version> 
    		<type>pom</type>
    		<exclusions>
					<exclusion>
						<groupId>xalan</groupId>
						<artifactId>serializer</artifactId>
					</exclusion>
					<exclusion>
						<groupId>xalan</groupId>
						<artifactId>xalan</artifactId>
					</exclusion>
			</exclusions>		
		</dependency>
		
		<!-- https://mvnrepository.com/artifact/ome/bio-formats_plugins 
	 	<dependency>
