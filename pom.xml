  			<groupId>io.scif</groupId>
  			<artifactId>scifio-bf-compat</artifactId>
		</dependency>

		<dependency>
  			<groupId>ome</groupId>
  			<artifactId>formats-gpl</artifactId>
  			<version>${formats-gpl.version}</version><!--$NO-MVN-MAN-VER$-->
		</dependency>
		
		<!-- https://mvnrepository.com/artifact/net.imglib2/imglib2-labkit -->
		<dependency>
    		<groupId>net.imglib2</groupId>
    		<artifactId>imglib2-labkit</artifactId>
    		<version>0.2.2</version> 
		</dependency>
    
		<!-- https://mvnrepository.com/artifact/sc.fiji/labkit-ui -->
		<dependency>
    		<groupId>sc.fiji</groupId>
    		<artifactId>labkit-ui</artifactId>
    		<version>0.3.4</version>
		</dependency>
		
		<!-- https://mvnrepository.com/artifact/sc.fiji/labkit-pixel-classification -->
		<dependency>
    		<groupId>sc.fiji</groupId>
    		<artifactId>labkit-pixel-classification</artifactId>
    		<version>0.1.16</version>
		</dependency>
		
		<!-- https://mvnrepository.com/artifact/net.haesleinhuepf/clij2_ -->
		<dependency>
    		<groupId>net.haesleinhuepf</groupId>
    		<artifactId>clij2_</artifactId>
    		<version>2.2.1.0</version>
		</dependency>
		
